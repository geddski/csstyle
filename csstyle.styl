use('./plugins/stylus/indexOf.js');
use('./plugins/stylus/temp.js');

// components
component(name){
  .{name} {
    {block}
  }
}

// options
// override components
option(name){
  {selector()}.\\--{name} {
    {block}
  }
}

// parts 
// make up the structure of a component
// override components
part(name){
  // component = getPath();
  // path = {&};
  // optionIndex = indexOf(path, ".\\--");
  

  // {selector()}__{name} {
  // &.woot {
  // &[0] {
  .cry {
    sel = selector();
    {block}
    // background: optionIndex;  
    // background: called-from;  
    background: selector();
  }
}

// tweaks
// override components, options, and modifiers
tweak(name){
  #csstyle .\\+{name}{
    {block}
  }
}

// locations
// override components, parts, options, and tweaks
location(name){
  #csstyle .\\@{name}{
    {block}
  }
}